<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheSocialGame.DBstuff.DBmanagerTestPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="IDentry"
                   Placeholder="Inserisci ID"/>
            <Entry x:Name="UsernameEntry"
                   Placeholder="Inserisci Username"/>
            <Label x:Name="InfoLabel"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="Center"
                   Text="Inserisci i dati e clicca"/>
            <Button Text="InserisciNuovoUtente"
                    BackgroundColor="Red"
                    Clicked="TriggerInserisci"/>
            <Button Text="SelezionaUtente"
                    BackgroundColor="ForestGreen"
                    Clicked="TriggerSeleziona"/>
            <Button Text="SelezionaAmici"
                    BackgroundColor="Gold"
                    Clicked="TriggerAmici"/>
            <Button Text="SelezionaEsperienze"
                    BackgroundColor="DodgerBlue"
                    Clicked="TriggerEsperienze"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>