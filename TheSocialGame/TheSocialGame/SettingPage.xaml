                    <Button BackgroundColor="LemonChiffon" BorderWidth="2" BorderColor="Black" CornerRadius="{OnPlatform Android='100', iOS='13'}"  AbsoluteLayout.LayoutBounds="{OnPlatform Android='20,480,30,30', iOS='20,480,27,27'}" Clicked="cambiaSfondo"  />
                    <Button BackgroundColor="AntiqueWhite" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='70,480,30,30', iOS='65,480,27,27'}" Clicked="cambiaSfondo"  />
                    <Button BackgroundColor="Bisque" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='120,480,30,30', iOS='110,480,27,27'}" Clicked="cambiaSfondo"  />
                    <Button BackgroundColor="LavenderBlush" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='170,480,30,30', iOS='155,480,27,27'}" Clicked="cambiaSfondo" />
                    <Button BackgroundColor="Lavender" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='220,480,30,30', iOS='200,480,27,27'}" Clicked="cambiaSfondo" />
                    <Button BackgroundColor="Azure" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='270,480,30,30', iOS='245,480,27,27'}" Clicked="cambiaSfondo" />
                    <Button BackgroundColor="Honeydew" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='320,480,30,30', iOS='290,480,27,27'}"  Clicked="cambiaSfondo"/>
                    <Button BackgroundColor="GhostWhite" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='370,480,30,30', iOS='335,480,27,27'}" Clicked="cambiaSfondo" />
                    -->
                    <Label Text="Colore Primario" TextColor="Black" FontSize="{OnPlatform Android='22', iOS='20'}" AbsoluteLayout.LayoutBounds="20,530,400,30" />
                    <Picker x:Name="prim"  AbsoluteLayout.LayoutBounds="{OnPlatform Android='20,590,300,30', iOS='20,590,307,27'}" BackgroundColor="Transparent"  TitleColor="Black" SelectedIndexChanged="primario" />
                    
                    <!--
                    <Button BackgroundColor="Yellow" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='20,590,30,30', iOS='20,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="Orange" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='70,590,30,30', iOS='65,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="Red" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='120,590,30,30', iOS='110,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="Pink" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='170,590,30,30', iOS='155,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="MediumPurple" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='220,590,30,30', iOS='200,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="Cyan" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='270,590,30,30', iOS='245,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="GreenYellow" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='320,590,30,30', iOS='290,590,27,27'}" Clicked="cambiaPrimario" />
                    <Button BackgroundColor="LightGray" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='370,590,30,30', iOS='335,590,27,27'}" Clicked="cambiaPrimario" />
                    -->
                    <Label Text="Colore Secondario" TextColor="Black" FontSize="{OnPlatform Android='22', iOS='20'}" AbsoluteLayout.LayoutBounds="20,640,400,30" />
                    <Picker x:Name="sec"  AbsoluteLayout.LayoutBounds="{OnPlatform Android='20,700,300,30', iOS='20,700,307,27'}" BackgroundColor="Transparent"  TitleColor="Black" SelectedIndexChanged="secondario"  />
                    
                    <!--
                    <Button BackgroundColor="PaleGoldenrod" BorderWidth="2" BorderColor="Black"  CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='20,700,30,30', iOS='20,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="NavajoWhite" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='70,700,30,30', iOS='65,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="LightSalmon" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='120,700,30,30', iOS='110,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="MistyRose" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='170,700,30,30', iOS='155,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="Thistle" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='220,700,30,30', iOS='200,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="PaleTurquoise" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='270,700,30,30', iOS='245,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="PaleGreen" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='320,700,30,30', iOS='290,700,27,27'}" Clicked="cambiaSecondario" />
                    <Button BackgroundColor="WhiteSmoke" BorderWidth="2" BorderColor="Black"   CornerRadius="{OnPlatform Android='100', iOS='13'}" AbsoluteLayout.LayoutBounds="{OnPlatform Android='370,700,30,30', iOS='335,700,27,27'}" Clicked="cambiaSecondario" />
                    -->
                    
                </AbsoluteLayout>
            </ScrollView>
           </RelativeLayout>
    </ContentPage.Content>
</ContentPage>
